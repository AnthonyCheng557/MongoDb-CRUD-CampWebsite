<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>summerCamp</title>
</head>

<body>
    <h1>Application</h1>
    <form action="/application" method="post" onsubmit="return validate()">
    <fieldset>
        <span><b>Name: </b></span>
        <input type="text" id="name" name='name' value="">
        <span><b>Email: </b></span>
        <input type="email" id="email" name='email' value="">
        <br>
        <span><b>GPA: </b></span>
        <input type="number" id="gpa" name='gpa' value="" min="0" max="4" step="0.1" required>
        <br>
        <span><b>Background Information: </b></span>
        <br>
        <label><textarea rows="5" cols="80" id="back_info" name='back_info'></textarea></label>
    </fieldset>
    <input type="reset">
    <input type="submit" value="Submit Application" id ="submit">
    </form>
    <hr>
    <a href="/">Home</a>

    <script>
        // Client-side JavaScript
        function validate() {
            let text1 = "Are you sure you want to submit your application? ";
            let text2 = "You will not be able to change your information once submitted.";
            return confirm(text1 + text2);
        }
    </script>
</body>

</html>